                        .col-6.mb-3
                          .d-flex.align-items-end
                            +Select({
                              className: 'w-100',
                              label: 'Nhóm đối tượng',
                              placeholder: '--- Chọn nhóm đối tượng ---',
                              options: [
                                { label: 'Nhóm đối tượng 1', value: '1' },
                                { label: 'Nhóm đối tượng 2', value: '2' },
                                { label: 'Nhóm đối tượng 3', value: '3' },
                              ],
                              iconSuffix: 'bi bi-chevron-down',
                              required: true,
                            })
                            +Button({ className: 'border ms-3', icon: 'bi bi-plus-lg', variant: 'btn-light', circle: true })

                        .col-6.mb-3
                          .d-flex.align-items-end
                            +Select({
                              className: 'w-100',
                              label: 'Nhóm độ tuổi',
                              placeholder: '--- Chọn nhóm độ tuổi ---',
                              options: [
                                { label: 'Nhóm độ tuổi 1', value: '1' },
                                { label: 'Nhóm độ tuổi 2', value: '2' },
                                { label: 'Nhóm độ tuổi 3', value: '3' },
                              ],
                              iconSuffix: 'bi bi-chevron-down',
                              required: true,
                            })
                            +Button({ className: 'border ms-3', icon: 'bi bi-plus-lg', variant: 'btn-light', circle: true })

                        .col-6.mb-3
                          .d-flex.align-items-end
                            +Select({
                              className: 'w-100',
                              label: 'Trình độ',
                              placeholder: '--- Chọn trình độ ---',
                              options: [
                                { label: 'Trình độ 1', value: '1' },
                                { label: 'Trình độ 2', value: '2' },
                                { label: 'Trình độ 3', value: '3' },
                              ],
                              iconSuffix: 'bi bi-chevron-down',
                              required: true,
                            })
                            +Button({ className: 'border ms-3', icon: 'bi bi-plus-lg', variant: 'btn-light', circle: true })

                        .col-6.mb-3
                          .d-flex.align-items-end
