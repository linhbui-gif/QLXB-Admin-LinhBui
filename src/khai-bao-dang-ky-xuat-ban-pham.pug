extends includes/layouts/Guest.pug

block header
  - const pageTitle = 'Khai báo đăng ký xuất bản phẩm'

block pages
  .FormPage 
    .content.container-fluid
      .row 
        .col-lg-9
          +Card({ noPadding: true })
            .FormPage-submit.d-flex.flex-wrap.mb-3.border-bottom
              +Button({ title: 'Gửi duyệt', icon: 'bi bi-send me-1', variant: 'btn-primary' })  
              +Button({ title: 'Lưu nháp', icon: 'bi bi-save me-1', variant: 'btn-soft-dark' })  
              +Button({ title: 'Đóng', icon: 'bi bi-x-lg me-1', variant: 'btn-soft-dark' })  

            .accordion
              +Accordion({ className: 'FormPage-margin', mainId: 'thongtinkhaibao', id: 'Accordion1', parentId: 'AccordionParent', title: 'Thông tin xuất bản' })
                form(action="#") 
                  .row.mb-3
                    .col-12 
                      +Input({ label: 'Tên Xuất bản phẩm', placeholder: 'Nhập tên Xuất bản phẩm', required: true })

                  .accordion
                    +Accordion({ id: 'AccordionSub1', parentId: 'AccordionSubParent', title: 'I. Thông tin hồ sơ', dark: true })
                      .row 
                        .col-3.mb-3
                          +Input({ label: 'Mã số', placeholder: 'Mã XBP' })
                        .col-3.mb-3
                          +Input({ label: 'Năm XB', placeholder: 'Nhập năm', required: true })
                        .col-3.mb-3
                          +Input({ label: 'Mã số CXB', placeholder: 'Nhập mã CXB' })
                        .col-3.mb-3
                          +Input({ label: 'Mã số ISBN', placeholder: 'Nhập mã ISBN' })

                    +Accordion({ id: 'AccordionSub2', parentId: 'AccordionSubParent', title: 'II. Thông tin chung', dark: true })
                      .row 
                        .col-6.mb-3
                          +Input({ label: 'Tên gốc', placeholder: 'Nhập tên XBP' })
                        .col-6.mb-3
                          .d-flex.align-items-end
                            +Input({ className: 'w-100', label: 'Tác giả', placeholder: 'Nhập tên để tìm tác giả', required: true })
                            +Button({ className: 'border ms-3', icon: 'bi bi-plus-lg', variant: 'btn-light', circle: true })
                        .col-6.mb-3
                          +Select({
                            label: 'Phương thức xuất bản',
                            placeholder: 'Chọn phương thức xuất bản',
                            options: [
                              { label: 'Phương thức xuất bản 1', value: '1' },
                              { label: 'Phương thức xuất bản 2', value: '2' },
                              { label: 'Phương thức xuất bản 3', value: '3' },
                            ],
                            iconSuffix: 'bi bi-chevron-down',
                          })
                        .col-6.mb-3
                          .d-flex.align-items-end
                            +Input({ className: 'w-100', label: 'Đơn vị đăng ký', placeholder: 'Nhập tên để tìm tác giả', required: true })
                            +Button({ className: 'border ms-3', icon: 'bi bi-plus-lg', variant: 'btn-light', circle: true })

                    +Accordion({ id: 'AccordionSub3', parentId: 'AccordionSubParent', title: 'III. Thông tin hợp đồng xuất bản', dark: true })
                      .row 
                        .col-3.mb-3
                          +Input({ label: 'Số Hợp đồng', placeholder: 'Nhập số HĐ' })
                        .col-3.mb-3
                          +Select({
                            label: 'Kiểu HĐ',
                            placeholder: 'Chọn kiểu HĐ',
                            options: [
                              { label: 'Kiểu HĐ 1', value: '1' },
                              { label: 'Kiểu HĐ 2', value: '2' },
                              { label: 'Kiểu HĐ 3', value: '3' },
                            ],
                            iconSuffix: 'bi bi-chevron-down',
                          })
                        .col-3.mb-3
                          +DatePicker({ label: 'Ngày ký HĐ', placeholder: 'Ngày ký HĐ', iconSuffix: 'bi bi-calendar4-week' })
                        .col-3.mb-3
                          +DatePicker({ label: 'Ngày hết hạn', placeholder: 'Ngày hết hạn', iconSuffix: 'bi bi-calendar4-week' })

                    +Accordion({ id: 'AccordionSub4', parentId: 'AccordionSubParent', title: 'IV. Đối tượng sử dụng và biên mục đề tài', dark: true })
