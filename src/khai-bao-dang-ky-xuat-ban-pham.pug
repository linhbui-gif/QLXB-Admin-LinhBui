        .col-lg-3
          +ScrollSpy({
            title: 'Điều hướng trên trang',
            id: 'scrollSpy',
            parentId: 'scrollSpyParent',
            endId: 'scrollSpyEnd',
            options: [
              { link: '#thongtinkhaibao', title: 'Thông tin khai báo' },
              { link: '#banthaofile', title: 'Bản thảo & File' },
              { link: '#cacthongtinkhac', title: 'Các thông tin khác' },
