                              className: 'w-100',
                              label: 'Lĩnh vực - Ngành',
                              placeholder: '--- Chọn Lĩnh vực - Ngành ---',
                              options: [
                                { label: 'Lĩnh vực - Ngành 1', value: '1' },
                                { label: 'Lĩnh vực - Ngành 2', value: '2' },
                                { label: 'Lĩnh vực - Ngành 3', value: '3' },
                              ],
                              iconSuffix: 'bi bi-chevron-down',
                              required: true,
                            })
                            +Button({ className: 'border ms-3', icon: 'bi bi-plus-lg', variant: 'btn-light', circle: true })

                    +Accordion({ id: 'AccordionSub5', parentId: 'AccordionSubParent', title: 'V. Thông tin bản thảo', dark: true })
                      .row 
                        .col-6.mb-3
                          +Input({ type: 'file', label: 'File bản thảo', placeholder: 'Upload file', required: true })

                          p.mt-2
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            |Lưu ý !!! Định dạng file cho phép: DOC, DOCX

                        .col-6.mb-3 
                          .d-flex.align-items-end
                            +Input({ className: 'w-100', label: 'Số trang', required: true, placeholder: 'Nhập số trang bản thảo' })
                            +Button({ className: 'border ms-3', icon: 'bi bi-plus-lg', variant: 'btn-light', circle: true })

                    +Accordion({ id: 'AccordionSub6', parentId: 'AccordionSubParent', title: 'V. Thông tin bản thảo', dark: true })
                      .FormPage-switch-wrapper
                        .row 
                          .col-3
                            +Switch({ label: 'Ấn phẩm điện tử' })
                          .col-3
                            +Switch({ label: 'Ấn phẩm in' })
                          .col-3
                            +Switch({ label: 'Sách dịch' })
                          .col-3
                            +Switch({ label: 'Sách có bản quyền' })

                    +Accordion({ id: 'AccordionSub7', parentId: 'AccordionSubParent', title: 'VII. Thông tin ấn phẩm điện tử', dark: true })
                      .row 
                        .col-6.mb-3
                          +Select({
                            label: 'Chuẩn phát hành',
                            placeholder: '--- Chọn Chuẩn phát hành ---',
                            options: [
                              { label: 'Chuẩn phát hành 1', value: '1' },
                              { label: 'Chuẩn phát hành 2', value: '2' },
                              { label: 'Chuẩn phát hành 3', value: '3' },
                            ],
                            iconSuffix: 'bi bi-chevron-down',
                            required: true,
                          })

                        .col-6.mb-3 
                          .d-flex.align-items-end
                            +Select({
                              className: 'w-100',
                              label: 'Phát hành tại',
                              placeholder: '--- Chọn Phát hành tại ---',
                              options: [
                                { label: 'Phát hành tại 1', value: '1' },
                                { label: 'Phát hành tại 2', value: '2' },
                                { label: 'Phát hành tại 3', value: '3' },
                              ],
                              iconSuffix: 'bi bi-chevron-down',
                              required: true,
                            })
                            +Button({ className: 'border ms-3', icon: 'bi bi-plus-lg', variant: 'btn-light', circle: true })

                    +Accordion({ id: 'AccordionSub8', parentId: 'AccordionSubParent', title: 'VIII. Thông tin ấn phẩm in', dark: true })
                      .row 
                        .col-6.mb-3
                          +Input({ label: 'Số trang', required: true, placeholder: 'Nhập số trang' })
                        .col-6.mb-3
                          label.form-label Khổ sách - Rộng(cm) x Dài(cm)

                          .d-flex.align-items-end
                            +Input({ className: 'w-100', placeholder: 'Nhập độ rộng' })
                            +Input({ className: 'w-100 ms-3', placeholder: 'Nhập độ dài' })
                            +Button({ className: 'border ms-3', icon: 'bi bi-plus-lg', variant: 'btn-light', circle: true })

                        .col-3.mb-3
                          +DatePicker({ label: 'Ngày đủ bản thảo', placeholder: 'Ngày đủ bản thảo', iconSuffix: 'bi bi-calendar4-week' })
                        .col-3.mb-3
                          +DatePicker({ label: 'Ngày ra bản sách', placeholder: 'Ngày ra bản sách', iconSuffix: 'bi bi-calendar4-week' })
                        .col-3.mb-3
                          +Input({ label: 'Loại giấy ruột', placeholder: 'VD: BB60' })
                        .col-3.mb-3
                          +Input({ label: 'Loại giấy bìa', placeholder: 'VD: C250' })
                        .col-3.mb-3
                          +Input({ label: 'Số màu in ruột', placeholder: 'VD: 4' })
                        .col-3.mb-3
                          +Input({ label: 'Số màu in bìa', placeholder: 'VD: 4' })
                        .col-3.mb-3
                          +Input({ label: 'Số lượng in lần 1', placeholder: 'VD: 1000' })
                        .col-3.mb-3
                          +Input({ label: 'Giá bìa', placeholder: 'VD: 5.000.000' })

                    +Accordion({ id: 'AccordionSub9', parentId: 'AccordionSubParent', title: 'IX. Thông tin sách dịch', dark: true })
                      .row 
                        .col-6.mb-3
                          .d-flex.align-items-end
                            +Select({
                              className: 'w-100',
                              label: 'Tên dịch giả',
                              placeholder: '--- Chọn dịch giả ---',
                              options: [
                                { label: 'Tên dịch giả 1', value: '1' },
                                { label: 'Tên dịch giả 2', value: '2' },
                                { label: 'Tên dịch giả 3', value: '3' },
                              ],
                              iconSuffix: 'bi bi-chevron-down',
                            })
                            +Button({ className: 'border ms-3', icon: 'bi bi-plus-lg', variant: 'btn-light', circle: true })

                        .col-6.mb-3
                          +Select({
                            label: 'Ngôn ngữ gốc',
                            placeholder: '--- Chọn ngôn ngữ gốc ---',
                            options: [
                              { label: 'Ngôn ngữ gốc 1', value: '1' },
                              { label: 'Ngôn ngữ gốc 2', value: '2' },
                              { label: 'Ngôn ngữ gốc 3', value: '3' },
                            ],
                            iconSuffix: 'bi bi-chevron-down',
                            required: true,
                          })

                        .col-6.mb-3
                          .d-flex.align-items-end
                            +Select({
                              className: 'w-100',
                              label: 'Nhóm đối tượng',
                              placeholder: 'Gõ tên để tìm ấn phẩm',
                              showSearch: true,
                              options: [
                                { label: 'Nhóm đối tượng 1', value: '1' },
                                { label: 'Nhóm đối tượng 2', value: '2' },
                                { label: 'Nhóm đối tượng 3', value: '3' },
                              ],
                              iconSuffix: 'bi bi-chevron-down',
                            })
                            +Button({ className: 'border ms-3', icon: 'bi bi-plus-lg', variant: 'btn-light', circle: true })

                        .col-6.mb-3
                          +Select({
                            label: 'Ngôn ngữ xuất bản',
                            placeholder: '--- Chọn ngôn ngữ xuất bản ---',
                            options: [
                              { label: 'Ngôn ngữ xuất bản 1', value: '1' },
                              { label: 'Ngôn ngữ xuất bản 2', value: '2' },
                              { label: 'Ngôn ngữ xuất bản 3', value: '3' },
                            ],
                            iconSuffix: 'bi bi-chevron-down',
                            required: true,
                          })
                        
                    +Accordion({ id: 'AccordionSub10', parentId: 'AccordionSubParent', title: 'X. Thông tin bản quyền', dark: true })
                      .row 
                        .col-6.mb-3
                          +Input({ label: 'Người chịu trách nhiệm', placeholder: 'Nhập tên người chịu trách nhiệm bản quyền' })
                        .col-6.mb-3
                          +Select({
                            label: 'Loại bản quyền',
                            placeholder: '--- Chọn loại bản quyền ---',
                            options: [
                              { label: 'Loại bản quyền 1', value: '1' },
                              { label: 'Loại bản quyền 2', value: '2' },
                              { label: 'Loại bản quyền 3', value: '3' },
                            ],
                            iconSuffix: 'bi bi-chevron-down',
                          })
                        .col-4.mb-3
                          +Input({ label: 'Bản quyền thuộc', placeholder: 'Nhập tên chủ sở hữu bản quyền' })
                        .col-4.mb-3
                          +DatePicker({ label: 'Bản quyền từ', placeholder: 'Ngày bản quyền bắt đầu', iconSuffix: 'bi bi-calendar4-week' })
                        .col-4.mb-3
                          +DatePicker({ label: 'Bản quyền đến', placeholder: 'Ngày bản quyền kết thúc', iconSuffix: 'bi bi-calendar4-week' })
                        .col-12.mb-3
                          +TextArea({ label: 'Thông tin bổ sung', placeholder: 'Nhập nội dung tại đây' })

              +Accordion({ className: 'FormPage-margin', mainId: 'banthaofile', id: 'Accordion2', parentId: 'AccordionParent', title: 'Bản thảo & FILE' })
                form(action="#") 
                  +Tab({
                    className: 'mb-3',
                    options: [
                      { id: 'tab1', tabId: 'tabId1', label: 'Tất cả' },
                      { id: 'tab2', tabId: 'tabId2', label: 'Phê duyệt đề tài' },
                      { id: 'tab3', tabId: 'tabId3', label: '2.1 Duyệt cấp phép CXB' },
                      { id: 'tab4', tabId: 'tabId4', label: '2.2 Xin cấp phép CXB' },
                      { id: 'tab5', tabId: 'tabId5', label: '3. Ký HĐ Tác giả' },
                      { id: 'tab6', tabId: 'tabId6', label: '4.2 Yêu cầu thiết kế' },
                      { id: 'tab7', tabId: 'tabId7', label: '5.1 Thiết kế bìa' },
                      { id: 'tab8', tabId: 'tabId8', label: '5.2 BTV Duyệt Market bìa	' },
                    ],
                  })
                  .tab-content 
                    each item, index in ['tabId1', 'tabId2', 'tabId3', 'tabId4', 'tabId5', 'tabId6', 'tabId7', 'tabId8']
                      .tab-pane.fade(id=`${item}` role="tabpanel" class=`${index === 0 ? 'show active' : ''}`)
                        +Table({})
                          thead 
                            tr 
                              th.text-center #
                              th Loại
                              th Người bình luận
                              th Thời gian
                          tbody 
                            each item in [1,2,3,4,5]
                              tr 
                                td.text-center= item
                                td 
                                  .Table-icon   
                                    if (item % 2 === 0)
                                      img(src="./assets/icons/icon-docx.svg", alt="")
                                    else
                                      img(src="./assets/icons/icon-pdf.svg", alt="")
                                td 
                                  .Table-link.ellipsis Thế giới bên trong bất động sản: Mua, bán và tạo lợi nhuận trong thị trường bất động sản.
                                td.text-nowrap 23:13’ 27/06/2022

              +Accordion({ className: 'FormPage-margin bottom', mainId: 'cacthongtinkhac', id: 'Accordion3', parentId: 'AccordionParent', title: 'Các thông tin khác' })
                form(action="#") 
                  .row
                    .col-12.mb-3
                      +TextArea({ label: 'ĐỀ CƯƠNG' })

                    .col-12.mb-3
                      +TextArea({ label: 'GHI CHÚ', placeholder: 'Nhập nội dung tại đây' })

