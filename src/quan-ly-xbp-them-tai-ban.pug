                      .row 
                        .col-3.mb-3
                          +Input({ label: 'Năm XB', placeholder: 'Nhập năm' })
                        .col-3.mb-3
                          +Input({ label: 'Năm tái bản', placeholder: 'Nhập năm' })
                        .col-3.mb-3
                          +Input({ label: 'Mã số CXB', placeholder: 'Nhập mã CXB' })
                        .col-3.mb-3
