extends includes/layouts/Guest.pug

block header
  - const pageTitle = 'Đăng ký tái bản'

block pages
  .FormPage 
    .content.container-fluid
      .row 
        .col-lg-9
          +Card({ noPadding: true })
            .FormPage-submit.d-flex.flex-wrap.mb-3.border-bottom
              +Button({ title: 'Gửi đăng ký ', icon: 'bi bi-send me-1', variant: 'btn-primary' })  
              +Button({ title: 'Lưu nháp', icon: 'bi bi-save me-1', variant: 'btn-soft-dark' })  
              +Button({ title: 'Huỷ', icon: 'bi bi-x-lg me-1', variant: 'btn-soft-dark' })  

            .accordion
